<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back!"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/cover" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/first_card_register"
        android:layout_width="@dimen/_265sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_5sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/editText_label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Email"
                android:textAllCaps="true"
                android:textColor="@color/colorViewTextTitles" />
            <EditText
                android:id="@+id/editText_email"
                android:layout_below="@id/editText_label_email"
                android:layout_alignLeft="@id/editText_label_email"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
            <TextView
                android:id="@+id/editText_label_password"
                android:layout_below="@id/editText_email"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="Password"
                android:textAllCaps="true"
                android:textColor="@color/colorViewTextTitles"/>
            <EditText
                android:id="@+id/editText_password"
                android:layout_below="@id/editText_label_password"
                android:layout_alignLeft="@id/editText_label_email"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_marginBottom="@dimen/_30sdp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/second_card_register"
        android:layout_below="@id/first_card_register"
        android:layout_alignLeft="@id/first_card_register"
        android:layout_width="@dimen/_265sdp"
        android:layout_height="@dimen/_45sdp"
        android:backgroundTint="@color/colorAccent"
        app:cardCornerRadius="0dp"
        android:clickable="true"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Get Started"
            android:textColor="@android:color/white"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/text_noAccount"
        android:layout_below="@id/second_card_register"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Don't Have An account? Sign Up!"
        android:textColor="@android:color/black"
        android:clickable="true"/>

</RelativeLayout>